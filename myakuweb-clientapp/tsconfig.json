{
  "compilerOptions": {
    "target": "ES5",
    "module": "ES6",
    "jsx": "react",

    "moduleResolution": "Node",
    "sourceMap": true,
    "baseUrl": "./src",
    "outDir": "lib",

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
